//- Custom Configuration
block config
  //- Setup site's base URL to match the "baseUrl" key within `package.json`
  //- Otherwise default to relative pathing
  - var baseUrl = config.baseUrl || './'

doctype html

<html class='no-js' lang='en'>

head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
  title Time Input Polyfill
  meta(name='description', content= 'A new Yeogurt application')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')

  //- favicon
  <link rel="apple-touch-icon" sizes="180x180" href="images/favicon/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="images/favicon/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="images/favicon/favicon-16x16.png">
  <link rel="manifest" href="images/favicon/site.webmanifest">
  <link rel="mask-icon" href="images/favicon/safari-pinned-tab.svg" color="#565656">
  <link rel="shortcut icon" href="images/favicon/favicon.ico">
  <meta name="msapplication-TileColor" content="#2b5797">
  <meta name="msapplication-config" content="images/favicon/browserconfig.xml">
  <meta name="theme-color" content="#d2d2d2">

  // Open Graph code
  meta(property='og:image:width' content='1200')
  meta(property='og:image:height' content='628')
  meta(property='og:description' content=pkg.description)
  meta(property='og:url' content=`https://dan503.github.io/${pkg.name}/`)
  meta(property='og:image' content=`https://dan503.github.io/${pkg.name}/images/og-image.jpg`)
  meta(property='og:title' content='Time Input Polyfill')

  // Twitter code
  meta(name='twitter:card' content='summary_large_image')
  meta(name='twitter:creator' content='@Daniel_Tonon')
  meta(name='twitter:title' content='Time Input Polyfill')
  meta(name='twitter:description' content=pkg.description)
  meta(name='twitter:image' content=`https://dan503.github.io/${pkg.name}/images/og-image.jpg`)
  meta(name='twitter:image:alt' content=pkg.name+' logo against a swirling background')

  block stylesheets
    link(rel='stylesheet', href= baseUrl + 'styles/main.css')

  if (args.production)
    // Google Analytics
    script(async, src="https://www.googletagmanager.com/gtag/js?id=UA-90397907-4")
    script.
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'UA-90397907-4');

body
  .module-code
    include ./auto-imports.pug

  block content

  block scripts
    script(src= baseUrl + 'scripts/main.js')

</html>
