extends _layouts/base

include _modules/link/link

block content
  .container(style="text-align: center")
    h1 Time Input Polyfill demo

    .block
      label(for="real") Real time input
      input(id="real" type='time')

    .block
      label(for="fake") Polyfill time input
      input.time(id="fake" type='text')

    .block
      label(for="real-value") Real time input (with value)
      input(id="real-value" type='time' value="20:30")

    .block
      label(for="fake-value") Polyfill time input (with value)
      input.time(id="fake-value" type='text' value="20:30")

    p: a(href='https://github.com/Dan503/time-input-polyfill')
      img(style='position: absolute; top: 0; right: 0; border: 0;', src='https://s3.amazonaws.com/github/ribbons/forkme_right_white_ffffff.png', alt='Fork me on GitHub')
